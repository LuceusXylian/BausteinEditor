{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["es5", "es6", "es2017", "dom"],
        "rootDir": "./src/",
        "outDir": "./out",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": false,
        "allowJs": true,
        "target": "es5",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"],
}